<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_Gimnasio.HistorialVisitasPage"
             BackgroundImageSource="fondo_app.jpg"
             Title="Historial de Visitas">
    <VerticalStackLayout
        Spacing="20">
        <StackLayout
            Spacing="10">
            <Label
            Text="Visitas"
            FontSize="50"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontFamily="NovaSquare-Regular"/>
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                Spacing="10">
                <Label
                    Text="Lista de vsistas de:"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    FontFamily="NovaSquare-Regular"/>
                <Frame
                    Padding="10"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Label
                        x:Name="correo"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Text="juan.pozo@udla.edu.ec"/>
                </Frame>

            </StackLayout>

        </StackLayout>
        <ListView x:Name="listaVisitas" RowHeight="100" HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame CornerRadius="20" Margin="10,0,10,0" HasShadow="True" HeightRequest="90" Padding="5">
                            <StackLayout Orientation="Horizontal">
                                <!-- Imagen -->
                                <StackLayout Orientation="Vertical" Padding="10,15,00,10">
                                    <Image Source="localizacion.png"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           HeightRequest="50"
                                           WidthRequest="50"/>
                                </StackLayout>

                                <!-- Etiquetas -->
                                <StackLayout Orientation="Vertical" Padding="10" Spacing="5">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Fecha: "
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Start"/>
                                        <Label Text="{Binding fechaVisita}"
                                               VerticalOptions="Start"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="#333333"
                                               HorizontalOptions="Center"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="DescripciÃ³n: "
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                                        <Label Text="{Binding descripcionVisita}"
                                       VerticalOptions="End"
                                       FontSize="20"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>