<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_Gimnasio.RegistroPage"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False"
             Title="Registro"
             BackgroundImageSource="fondo_login.png">

    <VerticalStackLayout
        
       Spacing="25"
       Padding="30,0"
       VerticalOptions="Center">
        
        <VerticalStackLayout
           Spacing="10">
            <Label Text="Registrarse!"
                  FontSize="28"
                  TextColor="Black"
                  HorizontalTextAlignment="Center"/>
            
            <Label Text="Crea un nuevo usuario"
                  FontSize="18"
                  TextColor="Gray"
                  HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <StackLayout 
           Orientation="Horizontal">
            <Frame HeightRequest="45"
                  Margin="-20,0,0,0"
                  HasShadow="True"
                  BorderColor="White"
                  HorizontalOptions="FillAndExpand"
                  Padding="0">
                <Entry x:Name="UsuarioNuevo" 
                      VerticalOptions="FillAndExpand"
                      Margin="20,0,0,0"
                      Placeholder="Nuevo usuario"/>
            </Frame>
        </StackLayout>

        <StackLayout Orientation="Horizontal">

            <Frame HeightRequest="45"
                  Margin="-20,0,0,0"
                  HasShadow="True"
                  BorderColor="White"
                  HorizontalOptions="FillAndExpand"
                  Padding="0">
                <Entry x:Name="PasswordNueva"
                      VerticalOptions="Center"
                      Margin="20,0,0,0"
                      Placeholder="Nueva contraseÃ±a"
                      IsPassword="True"/>
            </Frame>
        </StackLayout>

        <StackLayout>
            <Button Text="REGISTRARSE"
               FontSize="Medium"
               WidthRequest="300"
               CornerRadius="20"
               HorizontalOptions="Center"
               BackgroundColor="Green"
                Clicked="OnClickRegistro">
            </Button>
            <Button Text="Volver"
                    TextColor="DarkCyan" 
                    Background="Transparent"
                    Clicked="OnClickVolver"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>